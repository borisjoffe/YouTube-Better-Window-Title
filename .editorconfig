# http://editorconfig.org
root = true

[*]
charset = utf-8
#indent_style = tab
#indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.{js,es6,jsx,ts}]
indent_style = tab
indent_size = 4

[.{jshintrc,eslintrc,.babelrc}]
indent_style = space
indent_size = 4

[*.json]
indent_style = space

[package.json]
indent_style = space
indent_size = 2

[*.{html,jade}]
indent_style = tab
indent_size = 4

[*.{css,sass,less,styl,stylus}]
indent_style = tab
indent_size = 4
